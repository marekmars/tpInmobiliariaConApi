<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".ui.inmueble.inmuebleDetalle.InmuebleDetalleFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="379dp"
        android:layout_height="647dp"
        app:cardCornerRadius="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_bar">


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="188.5dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgInmueble">

                <TextView
                    android:id="@+id/tvAmbLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:text="Ambientes"
                    android:textColor="@android:color/system_accent2_50"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvAmbDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="33dp"
                    android:shadowColor="@color/material_dynamic_neutral_variant90"
                    android:text="Ambientes"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTipoDetalleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:text="Tipo"
                    android:textColor="@android:color/system_accent2_50"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvTipoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="33dp"
                    android:shadowColor="@color/material_dynamic_neutral_variant90"
                    android:text="Tipo"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrecioDetalleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:text="Precio"
                    android:textColor="@android:color/system_accent2_50"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvPrecioDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="33dp"
                    android:shadowColor="@color/material_dynamic_neutral_variant90"
                    android:text="Precio"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgInmueble">

                <TextView
                    android:id="@+id/tvCodigoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:text="Codigo"
                    android:textColor="@android:color/system_accent2_50"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvCodigoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="33dp"
                    android:shadowColor="@color/material_dynamic_neutral_variant90"
                    android:text="Codigo"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDireLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:text="Direccion"
                    android:textColor="@android:color/system_accent2_50"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvDirDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="33dp"
                    android:shadowColor="@color/material_dynamic_neutral_variant90"
                    android:text="Direccion"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUsoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:text="Uso"
                    android:textColor="@android:color/system_accent2_50"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvUsoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="33dp"
                    android:shadowColor="@color/material_dynamic_neutral_variant90"
                    android:text="Uso"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear2"
                app:cardCornerRadius="20dp"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/imgInmueble"
                    android:layout_width="310.8dp"
                    android:layout_height="238dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <Switch
                android:id="@+id/mySwitch"
                android:layout_width="76dp"
                android:layout_height="52dp"
                android:layout_marginBottom="28dp"
                android:thumb="@drawable/custom_switch_thumb"

                android:track="@drawable/custom_switch_track"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/labelSwich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto arriba del Switch"
                android:textColor="@android:color/system_accent2_50"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/mySwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear1"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>